<p id="notice"><%= notice %></p>

<h1>Donations</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @donations.each do |donation| %>
      <tr>
        <td><%=donation.first_name %></td>
        <td><%=donation.last_name %></td>
        <td><%=donation.zip_code %></td>
        <td><%=donation.phone_number %> &nbsp; &nbsp; </td>
        <td><%=donation.email %></td>
      </tr>
      <tr>
        <td><%=donation.donation_category %> &nbsp; &nbsp; </td>
        <td><%=donation.item %> &nbsp; &nbsp; </td>
        <td><%=donation.quantity %> &nbsp; &nbsp; </td>
        <td><%=donation.notes %></td>
      </tr>
      <tr>
        <td><%= link_to 'Show', donation %></td>
        <td><%= link_to 'Edit', edit_donation_path(donation) %></td>
        <td><%= link_to 'Destroy', donation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Donation', new_donation_path %>
